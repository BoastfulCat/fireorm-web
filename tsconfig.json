{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/*.d.ts"
    ],
    "lib": [
      "es2015",
      "es2017",
      "esnext"
    ],
    "target": "es5",
    "module": "esnext",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
